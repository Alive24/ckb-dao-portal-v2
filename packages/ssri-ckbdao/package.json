{
  "name": "ssri-ckbdao",
  "version": "0.1.0",
  "description": "SSRI SDK for CKB DAO Portal v2 protocol",
  "author": "CKB DAO Team",
  "license": "MIT",
  "private": false,
  "type": "module",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "generate": "mkdir -p src/generated && moleculec --language - --schema-file ../../schemas/dao.mol --format json > src/generated/dao.json && ts-node scripts/generate-types.ts",
    "prebuild": "npm run generate",
    "build": "rimraf ./dist && tsc",
    "lint": "eslint ./src",
    "format": "prettier --write . && eslint --fix ./src",
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "test:all": "./scripts/test.sh",
    "test:unit": "./scripts/test.sh unit",
    "test:integration": "./scripts/test.sh integration",
    "test:docker": "./scripts/test.sh --keep",
    "test:debug": "echo 'Open VS Code/Cursor and click Debug above any test.'"
  },
  "dependencies": {
    "@ckb-ccc/core": "^1.3.1",
    "@ckb-ccc/ssri": "^0.1.1"
  },
  "devDependencies": {
    "@ckb-ccc/eip6963": "^1.0.18",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.2",
    "eslint": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "public"
  }
}